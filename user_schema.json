{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/todo-app.schema.json",
  "title": "Firestore ToDo App Schema",
  "type": "object",
  "properties": {
    "users": {
      "type": "array",
      "description": "Collection of user documents",
      "items": {
        "type": "object",
        "properties": {
          "uid": {
            "type": "string",
            "description": "Unique Firebase Auth UID for the user"
          },
          "display_name": {
            "type": "string",
            "description": "Display name of the user"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "User's email address"
          },
          "photo_url": {
            "type": "string",
            "format": "uri",
            "description": "URL to user's profile picture"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time",
            "description": "User's birthdate stored as Firestore timestamp"
          },
          "created_time": {
            "type": "string",
            "format": "date-time",
            "description": "Account creation time stored as Firestore timestamp"
          }
        },
        "required": ["uid", "display_name", "email", "created_time"]
      }
    }
  }
